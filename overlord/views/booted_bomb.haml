- 5.times do
  %br

%center
  - if !bomb.activated? && bomb.booted?
    = haml :_booted_bomb
  - elsif bomb.activated?
    = haml :_bomb_already_active
  - elsif bomb.exploded?
    = haml :_bomb_exploded
  -elsif bomb.deactivated?
    = haml :_deactivated_bomb
  -elsif !bomb.activated?
    = haml :_bomb_not_booted
